<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamup.teamsgenerator"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.teamup.teamsgenerator.SplashScreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.teamup.teamsgenerator.MainScreen.ListsScreen">
            <intent-filter>
                <action android:name="OPEN_MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.teamup.teamsgenerator.PlayerRegistrationScreen.PlayerRegScreen"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name="com.teamup.teamsgenerator.MatchRegistrationScreen.MatchRegScreen"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name="com.teamup.teamsgenerator.PlayerProfileScreen.PlayerProfileScreen" />

        <activity android:name="com.teamup.teamsgenerator.MatchProfileScreen.MatchProfileScreen" />

        <activity android:name="com.teamup.teamsgenerator.TeamsListScreen.TeamListScreen" />

    </application>

</manifest>